# config for cross-binutils

menuconfig CROSS_BINUTILS
	bool
	prompt "binutils                    "
	select KERNEL_HEADERS

config CROSS_BINUTILS_VERSION
	depends on CROSS_BINUTILS
	string
	prompt "binutils version"
	default "2.17"
	help
	  Specify the binutils version here.

