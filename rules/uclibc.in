# config for uclibc

menuconfig UCLIBC
	bool
	select CROSS_GCC_FIRST

	select CROSS_GCC_SHARED
	select CROSS_GCC_THREADS_POSIX
	select CROSS_GCC_ENABLE_CXA_ATEXIT
	select CROSS_GCC_DISABLE_SJLJ_EXCEPTIONS
	prompt "uclibc                      "

if UCLIBC

config UCLIBC_VERSION
	string
	prompt "uclibc version"
	default "0.9.29"

config UCLIBC_CONFIG
	string
	default "uclibc-${PTXCONF_UCLIBC_VERSION}-${PTXCONF_ARCH}.config"

endif
